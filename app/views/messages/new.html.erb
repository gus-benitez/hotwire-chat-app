<h1> New Message </h1>

<%= turbo_frame_tag "new_message", target: "_top" do %>
  <%= form_with(model: [@room, @message], local: true) do |form| %>
    <div class="field">
      <%= form.label :content %>
      <%= form.text_field :content %>
      <%= form.submit "Send" %>
    </div>
  <% end %>
<% end %>

<div>
  <%= link_to "Back to room", room_path(@room) %>
</div>